@model CadastroCliente.Models.Address

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Users.IdUser" />
            <div class="form-group">
                <label asp-for="Users.NomeCompleto" class="control-label">Nome Completo</label>
                <input asp-for="Users.NomeCompleto" class="form-control" />
                <span asp-validation-for="Users.NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.DataNascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="Users.DataNascimento" class="form-control" />
                <span asp-validation-for="Users.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.CPF" class="control-label">CPF</label>
                <input asp-for="Users.CPF" class="form-control" />
                <span asp-validation-for="Users.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.Email" class="control-label">E-mail</label>
                <input asp-for="Users.Email" class="form-control" />
                <span asp-validation-for="Users.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CEP" class="control-label">CEP</label>
                <input asp-for="CEP" class="form-control" id="cep" />
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label">Logradouro</label>
                <input asp-for="Logradouro" class="form-control" id="logradouro" />
            </div>
            <div class="form-group">
                <label class="control-label">Complemento</label>
                <input class="form-control" id="complemento" />
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label">Bairro</label>
                <input asp-for="Bairro" class="form-control" id="bairro" />
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" id="cidade" />
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado</label>
                <input asp-for="Estado" class="form-control" id="estado" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
